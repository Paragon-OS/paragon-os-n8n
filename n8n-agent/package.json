{
  "name": "paragon-os-n8n",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "n8n:workflows:downsync": "ts-node src/n8n-workflows-cli.ts backup",
    "n8n:workflows:upsync": "ts-node src/n8n-workflows-cli.ts restore",
    "n8n:workflows:sync": "ts-node scripts/post-backup-sync.ts",
    "n8n:workflows:tree": "ts-node src/n8n-workflows-cli.ts tree",
    "n8n:verify": "ts-node src/n8n-workflows-cli.ts verify",
    "n8n:delete-all": "ts-node src/n8n-workflows-cli.ts delete-all",
    "n8n:pod:start": "ts-node scripts/start-n8n-pod.ts",
    "n8n:pod:stop": "ts-node scripts/stop-n8n-pod.ts",
    "n8n:pod:status": "ts-node scripts/status-n8n-pod.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:select": "ts-node src/scripts/test-selector.ts",
    "test:integration": "./scripts/test-integration.sh all",
    "test:integration:watch": "./scripts/test-integration.sh all --watch",
    "test:integration:log": "./scripts/test-integration.sh all --log",
    "test:credentials": "./scripts/test-integration.sh credentials",
    "test:credentials:log": "./scripts/test-integration.sh credentials --log",
    "test:backup-restore": "./scripts/test-integration.sh backup",
    "test:backup-restore:log": "./scripts/test-integration.sh backup --log",
    "test:simple": "./scripts/test-integration.sh simple",
    "test:cleanup": "pkill -f 'vitest.*integration' 2>/dev/null || true && podman ps -q --filter 'name=n8n-test' | xargs -r podman stop 2>/dev/null && podman ps -aq --filter 'name=n8n-test' | xargs -r podman rm -f 2>/dev/null || true",
    "docker:build": "./docker/build-custom-image.sh"
  },
  "devDependencies": {
    "@types/eventsource": "^1.1.15",
    "@types/lodash": "^4.17.21",
    "@types/node": "^22.0.0",
    "@types/prompts": "^2.4.9",
    "@vitest/coverage-v8": "^2.1.8",
    "eventsource": "^4.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.0",
    "vitest": "^2.1.8"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@n8n/rest-api-client": "^2.0.0-rc.3",
    "axios": "^1.13.2",
    "boxen": "^8.0.1",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "dotenv": "^17.2.3",
    "execa": "^9.6.1",
    "globby": "^16.0.0",
    "lodash": "^4.17.21",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "prompts": "^2.4.2"
  }
}
